
[user]
    name = QSmally
    email = github@qbot.eu

[init]
    defaultBranch = master
    templatedir = ~/.gittemplate

[core]
    excludesFile = ~/.gitignore

[status]
    submodulesummary = true

[pull]
    rebase = false

[alias]
    conflicts = "diff --name-only --diff-filter=U"
    ff = "merge --ff-only"
    graph = "log --oneline --graph"
    lg = "log --pretty=format:\"%h%x09%ad   %s (%an)\" --date=short"
    mods = "submodule update --init --recursive"
    mr = "merge --no-off --no-commit"
    project = "!bash -c 'git status && \
        git stash list && \
        ls -lAh --color=always'"
    purge = "!bash -c 'git remote prune origin && \
        git branch -v | \
        grep \"\\[gone\\]\" | \
        awk \"{print \\$1}\" | \
        xargs git branch -D'"
    save = "stash save --include-untracked"
